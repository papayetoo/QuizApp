<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:background="@drawable/ic_bg"
        android:gravity="center"
        tools:context=".ResultActivity">

    <TextView
            android:text="Result"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_result" android:gravity="center" />
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" android:layout_marginBottom="10dp" app:srcCompat="@drawable/ic_trophy" android:id="@+id/iv_trophy" />
        <TextView
                android:text="Hey, Congratulations!"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_congratulation"  android:layout_marginBottom="10dp" />
        <TextView
                android:layout_width="wrap_content"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_height="wrap_content" android:id="@+id/tv_userName"  android:layout_marginBottom="10dp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/tv_score"
                android:layout_marginBottom="10dp"/>
        <Button
                android:text="FINISH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_finish" />

</LinearLayout>